// A launch configuration that compiles the extension and then opens it inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
  "version": "0.2.0",
  "configurations": [
    {
      "args": [
        "-r",
        "ts-node/register",
        "--timeout",
        "999999",
        "--colors",
        "${workspaceFolder}/packages/**/test/**/*.spec.ts"
      ],
      "internalConsoleOptions": "openOnSessionStart",
      "name": "Mocha Tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "type": "pwa-node",
      "console": "integratedTerminal"
    },
    {
      "name": "Run Toolkit with sample",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/packages/app-studio-toolkit",
        "--extensionDevelopmentPath=${workspaceFolder}/examples/sample-action-client"
      ],
      "outFiles": [
        "${workspaceFolder}/packages/app-studio-toolkit/dist/**/*.js",
        "${workspaceFolder}/examples/sample-action-client/dist/**/*.js"
      ]
    },
    {
      "name": "Run Toolkit using workspace api instance",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/packages/app-studio-toolkit",
        "--extensionDevelopmentPath=${workspaceFolder}/examples/vscode-using-workspace-api"
      ],
      "outFiles": ["${workspaceFolder}/dist/**/*.js"]
    },
    {
      "name": "Run Toolkit with Artifact-Management Context Menus Example",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/packages/app-studio-toolkit",
        "--extensionDevelopmentPath=${workspaceFolder}/examples/vscode-using-workspace-api",
        "--extensionDevelopmentPath=${workspaceFolder}/examples/vscode-artifact-management-context-menus"
      ],
      "outFiles": ["${workspaceFolder}/dist/**/*.js"]
    },
    {
      "name": "Run Toolkit",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/packages/app-studio-toolkit"
      ],
      "outFiles": [
        "${workspaceFolder}/packages/app-studio-toolkit/dist/**/*.js"
      ]
    }
  ]
}
